{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/test-fixtures",
    "**/.turbo",
    "**/.next",
    "**/coverage",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.config.mjs",
    "scripts"
  ]
}
