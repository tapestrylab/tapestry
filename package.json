{
  "name": "tapestry-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Multi-package ecosystem for design system documentation, extraction, and developer experience tooling",
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^4.0.2",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
