{
  "name": "@tapestrylab/template",
  "version": "0.2.0",
  "description": "Template engine for generating structured component documentation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tapestry-template": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "templates",
    "themes",
    "schema"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@tapestrylab/extract": "workspace:*",
    "@tapestrylab/resolve": "workspace:*",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "design-system",
    "template",
    "documentation",
    "tapestry"
  ],
  "license": "MIT"
}
