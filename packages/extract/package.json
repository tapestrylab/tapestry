{
  "name": "@tapestrylab/extract",
  "version": "0.2.0",
  "description": "Extract component metadata from source files for Tapestry design systems",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tapestry-extract": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:extract": "pnpx tsx ./src/cli.ts extract --root ./test --output ./test/metadata.json"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "deepmerge-ts": "^7.1.5",
    "fast-glob": "^3.3.3",
    "oxc-parser": "^0.95.0",
    "picocolors": "^1.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/react": "^19.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "design-system",
    "component-metadata",
    "extract",
    "tapestry"
  ]
}
